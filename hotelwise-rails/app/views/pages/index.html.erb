
	<div class="container" style="width: 60%">
		<h1>Room Availability Check</h1>


		<form class="form-horizontal" action="/availability_check">
			<div class="form-group">
				<label class="col-sm-3 control-label" for="inputEmail3">Number of Adults</label>

				<div class="col-sm-9">
					<input class="form-control" id="numofadult" name="numofadult" placeholder="Number of Adults" type="number">
				</div>
			</div>


			<div class="form-group">
				<label class="col-sm-3 control-label" for="inputEmail3">Number of Children</label>

				<div class="col-sm-9">
					<input class="form-control" id="numofchildren" name="numofchildren" placeholder="Number of Children" type="number">
				</div>
			</div>


			<div class="form-group">
				<label class="col-sm-3 control-label" for="inputPassword3">Arrival Date</label>

				<div class="col-sm-9">
					<input class="form-control" id="arrive" name="arrive" placeholder="Arrival Date" type="text">
				</div>
			</div>


			<div class="form-group">
				<label class="col-sm-3 control-label" for="inputPassword3">Departure Date</label>

				<div class="col-sm-9">
					<input class="form-control" id="depart" name="depart" placeholder="Departure Date" type="text">
				</div>
			</div>


			<div class="form-group">
				<label class="col-sm-3 control-label" for="inputPassword3">Room Type</label>

				<div class="col-sm-9">
					<select class ="form-control" id="roomtype" name="roomtype">
						<option value="default">
							--Select--
						</option>
						
						<option value="single">
							Single
						</option>

						<option value="singleov">
							Single Ocean View
						</option>

						<option value="double">
							Double
						</option>

						<option value="family">
							Family
						</option>
					</select>
				</div>
			</div>

			<div class="form-group">
				<div class="col-sm-offset-3 col-sm-9">
					<button class="btn btn-default" type="submit">Check</button>
				</div>
			</div>
		</form>
	</div>
